 <theme>

 	 <formatVersion>6</formatVersion>
 	 <resolution>1920 1080</resolution>
 	 <include>./root directory.xml</include>

 	 <variables>
 	 	 <colorRedCarbon>8b0000</colorRedCarbon>
 	 	 <color.white>ffffff</color.white>
 	 	 <color.blue>0000CC</color.blue>
 	 	 <color.black>000000</color.black>
 	 	 <colorLettersFooter>7fd9fe</colorLettersFooter>
 	 	 <pathContentsSystem>./contents</pathContentsSystem>
 	 	 <pathFonts>./../contents/fonts</pathFonts>
 	 	 <pathScroll>./../contents/sound/scroll.wav</pathScroll>
 	 	 <fontSizeGamelist>30</fontSizeGamelist>
 	 </variables>

 	 <view name="system">
 	 	 <image name="background" extra="true">
 	 	 	 <path>${pathContentsSystem}/bg.jpg</path>	 
 	 	 </image>
 	 	 <image name="logo">
 	 	 	 <path>./contents/logo.png</path>
 	 	 </image>
 	 	 <image name="gradient" extra="true">
 	 	 	 <path>./../contents/images/gradient.png</path>
 	 	 </image>
 	 	 <image name="footer" extra="true">
 	 	 	 <path>./../contents/images/footer-img.png</path>
 	 	 </image>
 	 	 <image name="signature" extra="true">
 	 	 	 <path>./../contents/images/signature.png</path>
 	 	 </image>
 	 	 <helpsystem name="help">
 	 	 	 <textColor>${colorRedCarbon}</textColor>
 	 	 	 <iconColor>${colorRedCarbon}</iconColor>
 	 	 </helpsystem>
 	 </view>

 	 <view name="basic, detailed, video, grid">
 	 	 <image name="background">
 	 	 	 <path>./../contents/images/menu setup.jpg</path>
 	 	 </image>
 	 	 <image name="logo">
 	 	 	 <path>./contents/logo.png</path>
 	 	 </image>
 	 	 <helpsystem name="help">
 	 	 	 <fontPath>${pathFonts}/Timeless Series.ttf</fontPath>
 	 	 </helpsystem>
 	 	 <image name="footer" extra="true">
 	 	 	 <path>./../contents/images/footer-img2.png</path>
 	 	 </image>
 	 	 <image name="signature" extra="true">
 	 	 	 <path>./../contents/images/signature2.png</path>
 	 	 </image>
 	 	 <textlist name="gamelist">
 	 	 	 <fontPath>${pathFonts}/DRAGON KIDS.ttf</fontPath>
 	 	 	 <fontSize>${fontSizeGamelist}</fontSize>
 	 	 	 <scrollSound>${pathScroll}</scrollSound>
 	 	 	 <alignment>left</alignment>
			 <forceUppercase>true</forceUppercase>
 	 	 </textlist>
 	 	 <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
 	 	 	 <size>187 28</size>
 	 	 	 <color>${color.white}</color>
 	 	 	 <fontPath>${pathFonts}/PhoenixAyash.ttf</fontPath>
 	 	 	 <fontSize>20</fontSize>
 	 	 	 <alignment>left</alignment>
 	 	 	 <visible>false</visible>
 	 	 </text>
 	 	 <text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
 	 	 	 <size>206 28</size>
 	 	 	 <color>${color.white}</color>
 	 	 	 <fontPath>${pathFonts}/PhoenixAyash.ttf</fontPath>
 	 	 	 <fontSize>20</fontSize>
 	 	 	 <alignment>left</alignment>
 	 	 	 <visible>false</visible>
 	 	 </text>
 	 	 <text name="md_description">
 	 	 	 <pos>92 787</pos>
 	 	 	 <size>796 110</size>
 	 	 	 <color>${color.white}</color>
 	 	 	 <fontPath>${pathFonts}/PhoenixAyash.ttf</fontPath>
 	 	 	 <fontSize>20</fontSize>
 	 	 	 <alignment>center</alignment>
 	 	 </text>
 	 	 <rating name="md_rating">
 	 	 	 <size>0 24</size>
 	 	 	 <filledPath>./../contents/images/star_filled.png</filledPath>
 	 	 	 <unfilledPath>./../contents/images/star_empty.png</unfilledPath>
 	 	 	 <visible>false</visible>
 	 	 </rating>
 	 	 <datetime name="md_releasedate, md_lastplayed">
 	 	 	 <size>170 29</size>
 	 	 	 <color>${color.white}</color>
 	 	 	 <fontPath>${pathFonts}/PhoenixAyash.ttf</fontPath>
 	 	 	 <fontSize>20</fontSize>
 	 	 	 <alignment>left</alignment>
 	 	 	 <visible>false</visible>
 	 	 </datetime>
 	 </view>


 </theme>
